# =============================================================================
# JASECI DOCBENCH - Environment Configuration
# =============================================================================
# Copy this file to .env and fill in the values for your environment.

# =============================================================================
# DATABASE
# =============================================================================
# PostgreSQL connection settings
POSTGRES_USER=docbench
POSTGRES_PASSWORD=change_me_in_production
POSTGRES_DB=jaseci_benchmark

# Full database URL (used by backend)
# For development with local postgres:
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/jaseci_benchmark
# For docker-compose:
# DATABASE_URL=postgresql://docbench:${POSTGRES_PASSWORD}@postgres:5432/jaseci_benchmark

# =============================================================================
# API CONFIGURATION
# =============================================================================
# Port for the API server
API_PORT=5050

# Frontend API base URL (set during build)
VITE_API_BASE=/api

# =============================================================================
# FLASK SETTINGS
# =============================================================================
# Environment: development or production
FLASK_ENV=development

# =============================================================================
# DATABASE OPTIONS
# =============================================================================
# Auto-initialize database tables on startup
AUTO_INIT_DB=true

# Enable SQL query logging (set to true for debugging)
SQL_ECHO=false

# Connection pool settings
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20

# =============================================================================
# LLM SETTINGS
# =============================================================================
# Default temperature for benchmark runs
DEFAULT_TEMPERATURE=0.1

# OpenRouter API key (optional, users can provide their own)
# OPENROUTER_API_KEY=sk-or-v1-...
